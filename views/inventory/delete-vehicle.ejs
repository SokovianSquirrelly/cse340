<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %><%- messages() %><% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/inv/delete" method="post">
  <p>Are you sure you want to delete this vehicle?</p>
  <p>This cannot be undone!</p>
  <label for="inv_make">Make</label>
  <input
    id="inv_make"
    type="text"
    name="inv_make"
    class="textinp"
    readonly
    required
    value="<%= locals.inv_make %>"
  />

  <label for="inv_model">Model</label>
  <input
    id="inv_model"
    type="text"
    name="inv_model"
    class="textinp"
    readonly
    required
    value="<%= locals.inv_model %>"
  />

  <label for="inv_year">Year</label>
  <input
    id="inv_year"
    type="number"
    name="inv_year"
    class="textinp"
    readonly
    required
    value="<%= locals.inv_year %>"
  />

  <label for="inv_price">Price</label>
  <input
    id="inv_price"
    type="number"
    name="inv_price"
    class="textinp"
    readonly
    required
    value="<%= locals.inv_price %>"
  />

  <input
    type="submit"
    class="submit-button"
    value="Delete Vehicle"
  />

  <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%=
  locals.inv_id %>" <%}%>>
</form>
